<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddTask"
        android:background="@color/gray_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="finishTask"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/white"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="wrap_content"
            android:text="@string/new_task"
            android:id="@+id/addTask"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center"/>

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:textCursorDrawable="@drawable/cursor"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:textSize="14sp"
        android:maxLength="40"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edittext_background"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"
        android:id="@+id/titleInpLay"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="@string/what_is_to_be_done"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:textCursorDrawable="@drawable/cursor"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:textSize="14sp"
        android:maxLength="120"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edittext_background"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"
        android:id="@+id/taskInpLay"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="@string/set_reminder_date_and_time"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableEnd="@drawable/ic_date_range_black_24dp"
        android:drawableTint="@color/black"
        android:cursorVisible="false"
        android:clickable="true"
        android:focusable="false"
        android:background="@drawable/edittext_background"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"
        android:id="@+id/dateEdt"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:cursorVisible="false"
        android:clickable="true"
        android:focusable="false"
        android:drawableEnd="@drawable/ic_access_time_black_24dp"
        android:drawableTint="@color/black"
        android:background="@drawable/edittext_background"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"
        android:id="@+id/timeEdt"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp"
        android:text="@string/select_category"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:orientation="horizontal">

        <Spinner
            android:theme="@style/spinner_divider"
            android:id="@+id/spinnerCategory"
            android:focusable="false"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"
            android:id="@+id/addNewCategory"
            android:background="@color/black"
            android:src="@drawable/ic_playlist_add_black_24dp"
            app:tint="@color/white"
            android:contentDescription="@string/new_category_name" />


    </LinearLayout>

    <!--    the below view is just to push the button to the bottom of the -->
    <!--    screen. It doesn't serve any purpose whatsoever. If you want to -->
    <!--    see how buttom will align normally, remove the below view-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <androidx.appcompat.widget.AppCompatButton
        android:text="@string/save_task"
        android:background="@color/white"
        android:id="@+id/saveBtn"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>