<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="false"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@+id/not_found_anim"
        tools:visibility="visible"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/not_found"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nothing_to_show"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_below="@+id/not_found_anim"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/not_found_textview" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/top"
        app:titleTextColor="@color/white"
        android:background="@color/gray_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="7dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:id="@+id/toolbar_icon"
            android:src="@drawable/ic_baseline_format_list_bulleted_24"
            tools:ignore="ContentDescription" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_spinner"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:background="@color/gray_toolbar"
            android:src="@drawable/ic_baseline_delete_24"
            android:id="@+id/toolbar_delete"
            android:contentDescription="@string/delete_a_category" />
        <androidx.appcompat.widget.SearchView
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            app:searchHintIcon="@null"
            android:theme="@style/whyThough"
            app:queryHint="Enter a title to search..."
            app:queryBackground="@drawable/searchview_background"
            android:layout_height="35dp"
            android:id="@+id/toolbar_search"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/toolbar"
        android:id="@+id/todoRv"
        tools:itemCount="3"
        android:padding="8dp"
        tools:listitem="@layout/todo_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_margin="32dp"
        android:id="@+id/add_task"
        app:backgroundTint="@color/white"
        app:tint="@color/green"
        android:src="@drawable/ic_add_white_36dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/add_a_new_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="32dp"
        android:id="@+id/view_history"
        app:backgroundTint="@color/white"
        app:tint="@color/green"
        android:src="@drawable/ic_baseline_history_24"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:contentDescription="@string/view_history_of_finished_tasks"
        android:layout_height="wrap_content" />


</RelativeLayout>